@{
    ViewData["Title"] = "World Travel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model world_travel.Models.Experience

<h2>Edit</h2>
<hr/>
<h4>Edit this experience: @Html.DisplayFor(model => model.Activity)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ExperienceId)

    @Html.LabelFor(model => model.Activity)
    @Html.EditorFor(model => model.Activity)

    @Html.LabelFor(model => model.LocationId)
    @Html.DropDownList("LocationId")

    <input type="submit" value="Save" class="btn btn-default" />
}

<p>@Html.ActionLink("Back to List", "Index")</p>